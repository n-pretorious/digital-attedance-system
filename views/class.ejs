<% include partials/header %>
<% include partials/navigation %>

<head>
    <link rel="stylesheet" href="/stylesheet/class.css">
    <script type='text/javascript' src="/scripts/toggle.js"></script>
</head>

        <div class="col-sm-9 col-xs-11" id="main">
                <a href="#" data-toggle="offcanvas"><i class="fa fa-navicon fa-lg"></i></a>
                <br>
                
               <h1 class="jumbotron jumbotron-fluid text-center"><%= title %></h1>
 
       
        <div class="classForm ">
            <form action="" method="POST">
                <div class="input-group mb-3 ">
                    <div class="input-group-prepend">
                        <select id="viewUnits" name="viewUnits" class="form-control form-control-lg input-block">
                            <option value="null">select unit to proceed</option>
                            <% data.forEach(function(unit){ %>
                                <option value = <%= unit.code %> > <%= unit.code %> </option>
                                <% }) %>    
                        </select>
                        </div>
                        </div>
                           <div class="input-group-prepend">
                    <div class="input-group-prepend">
                        <p><input type="text" class="form-control form-control-lg" name="lecturer" id="lecturerName"
                                placeholder="lecturer's name"></p>
                    </div>
                </div>
                <div class="input-group-prepend">

                        <div class="input-group-prepend" >
                            <p><input type="text" class="form-control form-control-lg" name="course_code" placeholder="Enter course code"></p>
                             </div>
                   </div>
                            <p><input type="text" class="form-control form-control-lg" name="startTime" hidden></p>
                            <p><input type="text" class="form-control form-control-lg" name="endTime" hidden></p>
                            <p><input type="text" class="form-control form-control-lg" id="lat" name="latitude" hidden ><input type="text" id="long" name="longitude" hidden></p>
                   <div class="input-group-prepend">
                        <div class="input-group-prepend" >         
                            <p><input type="text"class="form-control form-control-lg" name="radius" placeholder="Enter the radius" ></p>
                                 </div>
                   </div> 
                   </form>
                </div>

                <div class="row">
                    <div class="col-md-6">
                <center><button  type="submit" class="btn btn-success  btn-lg" data-style="expand-right" id="firstbutton" >
                    Start-Class
                </button></center>
            </div>
            <div class="col-md-6">
                <center><button type="button" class="btn btn-success btn-lg " data-style="expand-left" id="secondbutton" >
                    End-Class
                </button></center>
                </div>
                </div>
            

        </div>
  


<% include partials/footer %>