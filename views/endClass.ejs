    <h1 class="jumbotron jumbotron-fluid text-center">End Class</h1>

    <div class="classForm">
        <form action="/lecturer/endClass" method="POST">

            <div class=input-group>
                <!-- <select class="selectpicker" data-show-subtext="true" data-live-search="true"> -->
                <select name="_id" class="form-control form-control-lg input-block" required>
                    <option selected disabled>select unit to proceed</option>
                    <% data.forEach(function(unit){ %>
                    <% if (unit.endTime == "") { %>
                    <option value=<%= unit._id  %>> <%= unit.unit %> </option>
                    <% } %>
                    <% }) %>
                </select>
            </div>

    </div>
    <div class="m-1 p-5">
        <center><button type="submit" class="btn btn-success btn-lg " data-style="expand-left" id="secondbutton">
                End-Class
            </button></center>

    </div>
    </form>
</div>
