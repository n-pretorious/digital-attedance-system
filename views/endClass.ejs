<% include partials/header %>
<% include partials/navigation %>



<div class="col-sm-9 col-xs-11" id="main">
    <a href="#" data-toggle="offcanvas"><i class="fa fa-navicon fa-lg"></i></a>
    <br>


    <div class="jumbotron jumbotron-fluid text-center">
        <h1>End Class</h1>

        <br>
        <div class="classForm">
            <form action="/lecturer/endClass" method="POST">
                <center>
                    <div class="form-group">
                        <label>Select a class to End</label>
                        <select id="select-single" name="EndClassSession" style="width:70% !important;"
                            placeholder="Choose one thing" data-allow-clear="1">
                            <% if(data.length>0){%>
                            <option disabled selected>-- SELECT SESSION --</option>
                            <% data.forEach(function(unit){ %>
                            <option value=<%= unit._id %>> <%= unit.unit %></option>
                            <% })}else{ %>
                            <option>No Active Lectures</option>
                            <% }%>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg " data-style="expand-left" id="secondbutton">
                        End-Class
                    </button>
                </center>

            </form>
        </div>

    </div>







</div>


<% include partials/footer %>