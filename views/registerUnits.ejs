<head>
    <link rel="stylesheet" href="/stylesheet/studentClass.css">
</head>

<div class="col-sm-8 col-xs-10" id="main">
    <a href="#" data-toggle="offcanvas"><i class="fa fa-navicon fa-lg"></i></a><br>

    <div class="jumbotron jumbotron-fluid text-center">
        <form action="/lecturer/add-new-unit" method="POST">

            <h3>Register Units</h3>

            <div class="container text-center" style="width:70% !important; text-align: center !important;">

                <div class="form-group">
                    <label for="NewUnitCodeField">Enter Unit Code</label>
                    <input type="text" class="form-control" name="code" placeholder="Enter Unit Code"
                        id="NewUnitCodeField" required>
                </div>
                <div class="form-group">
                    <label for="NewUnitNameField">Enter Unit Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Enter Unit Name"
                        id="NewUnitNameField" required autocomplete='off' />
                </div>
                <button id="resetUnitsButton" class="btn btn-outline-dark pull-left" type="reset">Reset</button>
                <button class="btn btn-success pull-right" type="submit">Submit</button>
            </div>
        </form>
    </div>


</div>

