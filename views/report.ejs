<% include partials/header %>
<% include partials/navigation%>




<div class="col-sm-9 col-xs-11" id="main">
  <a href="#" data-toggle="offcanvas"><i class="fa fa-navicon fa-lg"></i></a>
  <br>

  <div class="form-group">
    <label for="category">Select Category</label>
    <select class="select form-control" id="CategoryOfUnitsAttendance" required>
        <option selected disabled> -- SELECT --</option>
        <% data.forEach(function(unit){ %>
        <option value=<%= unit._id  %> <%= unit._id  %>> <%= unit.lecturer %> <%= unit.unit  %> </option>
        <% }) %>
      </select>
  </div>

  <div class="m-5 pb-5">
    <button class="btn btn-success btn-lg" type="button"><i class="fa fa-eye"></i> View </button>
    <button class="btn btn-success btn-lg" type="button"><i class="fa fa-print"></i> Print</button>
  </div>



  <div class="m-5 pb-5">
    <table class="table table-light">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Admission number</th>
          <th scope="col">Name</th>
        </tr>


      </thead>
      <tbody>
          <% for(let i=0; i < unit.student.length; i++) { %>
            <tr>
              <th scope="row"><%= [i] %></th>
              <td><%= unit[i].student %></td>
            </tr>
         <% } %>

         
